<div id= "show-container">
  <div class="options" style="width: 25%; display:flex; justify-content: space-between;">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Chapter <%= params[:chapter] || "1" %>
      </button>
      <ul class="dropdown-menu">
        <% @organized_chapters.each do |organized_chapter| %>
          <li><%=link_to "Chapter #{organized_chapter}", book_path(@book, chapter: organized_chapter), class:"dropdown-item", data: { turbo:false }%></li>
        <% end %>
      </ul>
    </div>
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        Display
      </button>
      <ul class="dropdown-menu">
        <li><%=link_to "Finished Cards", book_path(@book, chapter: params[:chapter], filter: "finished"), class:"dropdown-item", data: { turbo:false }%></li>
        <li><%=link_to "Unfinished Cards", book_path(@book, chapter: params[:chapter], filter: "unfinished"), class:"dropdown-item", data: { turbo:false }%></li>
        <li><%=link_to "All", book_path(@book, chapter: params[:chapter]), class:"dropdown-item", data: { turbo:false }%></li>
      </ul>
    </div>
  </div>
  <h2 id="deck-total">Flashcards: <%= @cards.count %></h2>
  <h2 id="deck-total">âœ… <%= @deck.count - @unfinished.count %>/<%= @deck.count %> cards</h2>
  <%=link_to "Back to study", study_book_path(@book, chapter: params[:chapter]), class:"btn btn-primary", style:"align-self: start;"  %>
  <%=link_to "Add Flashcard", new_book_card_path(@book), class:"btn btn-primary", style:"align-self: end;"  %>
  <div class="scene-show scene--card">
    <div class="flashcard-show-grid">
      <% @cards.each do |card| %>
        <div class="flashcard-show" data-book-target="card" data-controller="book">
          <div class="flashcard__face flashcard__face--front"><%= card.origin_word %>
            <div id="flashcard-show-icons">
              <%= link_to edit_card_path(card) do %>
                <%= image_tag "https://cdn-icons-png.flaticon.com/512/1828/1828802.png", class:"flashcard-show-edit" %>
              <% end %>
              <%= link_to card_path(card), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
                <%= image_tag "https://cdn-icons-png.flaticon.com/512/484/484560.png", class: "flashcard-show-delete" %>
              <% end %>
            </div>
            <p class="flashcard-show-flip btn btn-light rounded-pill" data-action="click->book#flipCards"> Flip</p>
          </div>
          <div class="flashcard__face flashcard__face--back"><%= card.translation_word %>
            <div id="flashcard-show-icons">
              <%= link_to edit_card_path(card) do %>
                <%= image_tag "https://cdn-icons-png.flaticon.com/512/1828/1828802.png", class:"flashcard-show-edit" %>
              <% end %>
              <%= link_to card_path(card), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do%>
                <%= image_tag "https://cdn-icons-png.flaticon.com/512/484/484560.png", class: "flashcard-show-delete" %>
              <% end %>
            </div>
            <p class="flashcard-show-flip btn btn-light rounded-pill" data-action="click->book#flipCards">Flip</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
